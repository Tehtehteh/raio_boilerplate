{
	"defaultSeverity": "error",
	"extends": "tslint:recommended",
	"rules": {
		"array-type": false,
		"arrow-parens": false,
		"arrow-return-shorthand": true,
		"await-promise": true,
		"ban-types": false,
		"class-name": true,
		"curly": true,
		"cyclomatic-complexity": ["warning", 20],
		"comment-format": {
			"severity": "warn"
		},
		"eofline": true,
		"forin": {
			"severity": "off"
		},
		"indent": [ true, "tabs" ],
		"interface-name": false,
		"interface-over-type-literal": false,
		"jsdoc-format": {
			"severity": "off"
		},
		"match-default-export-name": {
			"severity": "warning"
		},
		"max-classes-per-file": [true, 2],
		"max-file-line-count": [ false ],
		"max-line-length": [ "warning", 100 ],
		"member-access": false,
		"member-ordering": {
			"severity": "warning"
		},
		"new-parens": true,
		"no-angle-bracket-type-assertion": false,
		"no-bitwise": false,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": true,
		"no-console": ["warning"],
		"no-duplicate-variable": true,
		"no-empty": ["warning"],
		"no-eval": true,
		"no-irregular-whitespace": true,
		"no-require-imports": true,
		"no-reference": true,
		"no-shadowed-variable": false,
		"no-string-literal": false,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-trailing-whitespace": [true, "ignore-comments"],
		"no-unnecessary-initializer": true,
		"no-unused-expression": false,
		"no-unused-variable": {
			"severity": "warning"
		},
		"no-var-keyword": true,
		"object-literal-shorthand": false,
		"object-literal-sort-keys": false,
		"only-arrow-functions": ["warning"],
		"ordered-imports": false,
		"quotemark": [ true, "single", "jsx-double"],
		"prefer-const": false,
		"prefer-for-of": {
			"severity": "warning"
		},
		"radix": false,
		"semicolon": {
			"severity": "warning"
		},
		"space-before-function-paren": false,
		"trailing-comma": [ true, {
			"multiline": "always",
			"singleline": "never"
		}],
		"typedef-whitespace": false,
		"triple-equals": true,
		"variable-name": [
			true,
			"ban-keywords",
			"allow-pascal-case"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl"
		]
	}
}
